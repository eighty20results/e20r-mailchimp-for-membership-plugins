{
  "config": {
    "vendor-dir": "inc/"
  },
  "name": "eight20results/e20r-mailchimp-for-membership-plugins",
  "type": "plugin",
  "description": "Use MailChimp Interest Groups and Merge Fields when adding members to your MailChimp.com list(s) when they purchase, sign up, or register to get access your site/products. Segment users with Merge Tags and/or MailChimp Interest Groups. Include custom user meta data in the merge tags/merge fields. Supports <a href=\"https://wordpress.org/plugins/paid-memberships-pro/\">Paid Memberships Pro</a> and <a href=\"https://wordpress.org/plugins/woocommerce/\">WooCommerce</a>",
  "keywords": ["wordpress", "mailchimp", "pmpro", "pmpro-mailchimp", "interest groups", "woocommerce", "woocommerce-mailchimp"],
  "minimum-stability": "stable",
  "homepage": "https://eighty20results.com/wordpress-plugins/e20r-mailchimp-for-membership-plugins",
  "license": "GPLv2",
  "authors": [
    {
      "name": "Thomas Sjolshagen",
      "email": "thomas@eighty20results.com",
      "homepage": "https://eighty20results.com/thomas-sjolshagen",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0",
    "yahnis-elsts/plugin-update-checker": ">=4.5",
    "ext-curl": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": ">=3.5.8",
    "wp-coding-standards/wpcs": "^2.3.0",
    "automattic/phpcs-neutron-standard": "^v1.7.0",
    "phpstan/phpstan": "^0.12.78",
    "phpmetrics/phpmetrics": ">=v1.10.0",
    "phpunit/phpunit": "^8.3",
    "codeception/codeception": "^4.1.0",
    "codeception/module-asserts": "^1.3",
    "codeception/module-phpbrowser": "^1.0",
    "codeception/module-webdriver": "^1.2.0",
    "codeception/module-db": "^1.1",
    "codeception/module-filesystem": "^1.0",
    "codeception/module-cli": "^1.1.0",
    "codeception/util-universalframework": "^1.0.0",
    "codeception/aspect-mock": "<4.0",
    "spatie/phpunit-snapshot-assertions": "^4.2.5",
    "lucatume/wp-browser": "^3.0",
    "brain/monkey": ">=2.3.0",
    "szepeviktor/phpstan-wordpress": "^v0.7",
    "mikey179/vfsstream": "~1",
    "phpstan/extension-installer": "^1.1"
  },
  "autoload": {
    "psr-4": {
        "E20R\\": "",
        "E20R\\MC_Loader\\": "./",
        "E20R\\MailChimp\\": "./src",
        "E20R\\MailChimp\\Admin\\": "./src/Admin",
        "E20R\\MailChimp\\Handlers\\": "./src/Handlers",
        "E20R\\MailChimp\\Licensing\\": "./src/Licensing",
        "E20R\\MailChimp\\Plugin_Support\\": "./src/Plugin-Support",
        "E20R\\MailChimp\\Server\\": "./src/Server",
        "E20R\\MailChimp\\Views\\": "./src/Views",
        "E20R\\Test\\Unit\\": "./tests/unit/testcases",
        "E20R\\Test\\WPUnit\\": "./tests/wpunit/testcases"
    }
  },
  "scripts": {
    "post-install-cmd": "if [ -f inc/bin/phpcs ] ; then inc/bin/phpcs --config-set installed_paths inc/wp-coding-standards/wpcs ; fi",
    "post-update-cmd" : "if [ -f inc/bin/phpcs ] ; then inc/bin/phpcs --config-set installed_paths inc/wp-coding-standards/wpcs ; fi"
  }
}
